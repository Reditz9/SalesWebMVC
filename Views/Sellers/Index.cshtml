@model IEnumerable<SalesWebMVC.Models.Entities.Seller>

@{
    ViewData["Title"] = "Sellers";
    ViewData["Create"] = "Seller";
}

<h2>@ViewData["Title"]</h2>
<p>
    <a asp-action="Create" class="btn btn-primary">Add New @ViewData["Create"]</a>
</p>
<table class="table">
    <thead>
        <tr class="table-dark">
            <th>@Html.DisplayNameFor(s=> s.Id)</th>
            <th>@Html.DisplayNameFor(s=> s.Name)</th>
            <th>@Html.DisplayNameFor(s=> s.Email)</th>
            <th>@Html.DisplayNameFor(s=> s.BirthDate)</th>
            <th>@Html.DisplayNameFor(s=> s.BaseSalary)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(x=> item.Id)</td>
                <td>@Html.DisplayFor(x=> item.Name)</td>
                <td>@Html.DisplayFor(x=> item.Email)</td>
                <td>@Html.DisplayFor(x=> item.BirthDate)</td>
                <td>@Html.DisplayFor(x=> item.BaseSalary)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>